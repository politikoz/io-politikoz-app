# =============================
# CONFIGURAÇÕES GERAIS DO SISTEMA
# =============================

# URLs
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_SWAP_API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:5000

# Ambiente da aplicação
APP_ENV=development
# Valores possíveis: development, production

# Mock Configuration
NEXT_PUBLIC_API_MOCKING=disabled
# Valores possíveis: enabled, disabled

# =============================
# AUTENTICAÇÃO E SEGURANÇA
# =============================

# Discord OAuth2
NEXT_PUBLIC_DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# JWT
JWT_SECRET=your_jwt_secret_key  # Generate a strong random string for production

# =============================
# CARDANO BLOCKCHAIN
# =============================

# Pool ID
BECH32_POOL_ID=pool1psr42v6rvv3raeqsg9ru2zy5dp4cchlde8hw9xthrpstx5wz7wk

# Blockfrost
BLOCKFROST_API_KEY=your_blockfrost_api_key

# =============================
# CONFIGURAÇÃO DE E-MAIL (SMTP)
# =============================

# Configurações do servidor SMTP
EMAIL_SMTP_HOST=your_smtp_host
EMAIL_SMTP_PORT=587
EMAIL_SECURE=false

# Credenciais SMTP
EMAIL_USER=your_email
EMAIL_PASS=your_password

# Configurações de e-mail
EMAIL_FROM_NAME=Support
EMAIL_TO=your_support_email
EMAIL_SUBJECT=Support Request

# =============================
# INSTRUÇÕES
# =============================
# 1. Copie este arquivo para .env.local
# 2. Substitua todos os valores 'your_*' pelos valores reais
# 3. Nunca commit arquivos .env com credenciais reais
# 4. Mantenha este arquivo .env.example atualizado com novas variáveis
